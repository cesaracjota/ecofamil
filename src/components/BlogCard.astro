---
interface Props {
    title: string;
    excerpt: string;
    image: string;
    date: string;
    author: string;
    category: string;
    delay: number;
}

const { title, excerpt, image, date, author, category, delay } = Astro.props;
---

<article
    class="group bg-slate-900 rounded-2xl overflow-hidden border border-white/5 hover:border-ecogreen/30 transition-all duration-300 reveal-on-scroll opacity-0 translate-y-8"
    style={`transition-delay: ${delay * 100}ms`}
>
    <div class="relative h-64 overflow-hidden">
        <img
            src={image}
            alt={title}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
        />
        <div
            class="absolute top-4 left-4 bg-ecogreen text-white text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider"
        >
            {category}
        </div>
    </div>

    <div class="p-8">
        <div class="flex items-center gap-4 text-slate-400 text-sm mb-4">
            <div class="flex items-center gap-1">
                <!-- Icon Calendar -->
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-calendar"
                    ><rect width="18" height="18" x="3" y="4" rx="2" ry="2"
                    ></rect><line x1="16" x2="16" y1="2" y2="6"></line><line
                        x1="8"
                        x2="8"
                        y1="2"
                        y2="6"></line><line x1="3" x2="10" y1="10" y2="21"
                    ></line></svg
                >
                <span>{date}</span>
            </div>
            <div class="flex items-center gap-1">
                <!-- Icon User -->
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-user"
                    ><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"
                    ></path><circle cx="12" cy="7" r="4"></circle></svg
                >
                <span>{author}</span>
            </div>
        </div>

        <h3
            class="text-2xl font-bold text-white mb-3 group-hover:text-ecogreen transition-colors line-clamp-2"
        >
            {title}
        </h3>
        <p class="text-slate-400 leading-relaxed mb-6 line-clamp-3">
            {excerpt}
        </p>

        <a
            href="#"
            class="inline-flex items-center gap-2 text-white font-semibold group-hover:translate-x-2 transition-transform"
        >
            Leer m√°s
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-arrow-right text-ecogreen"
                ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
            >
        </a>
    </div>
</article>
