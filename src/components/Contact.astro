<section id="contacto" class="py-32 relative overflow-hidden bg-slate-900">
    <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-4xl mx-auto">
            <!-- Header -->
            <div class="text-center mb-16">
                <span
                    class="inline-block px-4 py-2 rounded-full bg-eco-emerald/10 border border-eco-emerald/30 text-eco-emerald text-sm font-medium mb-6 reveal opacity-0 translate-y-4 transition-all duration-700"
                >
                    Contáctanos
                </span>
                <h2
                    class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 reveal opacity-0 translate-y-4 transition-all duration-700 delay-100"
                >
                    ¿Listo para<br />
                    <span class="gradient-text">transformar tu gestión?</span>
                </h2>
                <p
                    class="text-xl text-white/50 max-w-2xl mx-auto reveal opacity-0 translate-y-4 transition-all duration-700 delay-200"
                >
                    Nuestro equipo está preparado para ofrecerte soluciones a la
                    medida.
                </p>
            </div>

            <!-- Contact Cards -->
            <div
                class="grid md:grid-cols-3 gap-6 mb-12 reveal opacity-0 translate-y-4 transition-all duration-700 delay-300"
            >
                <!-- Phone -->
                <a
                    href="tel:+51999999999"
                    class="group p-8 rounded-3xl bg-white/5 border border-white/10 hover:border-eco-emerald/30 hover:bg-eco-emerald/5 transition-all text-center"
                >
                    <div
                        class="w-16 h-16 rounded-2xl bg-eco-emerald/10 flex items-center justify-center mx-auto mb-6 group-hover:bg-eco-emerald/20 transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="28"
                            height="28"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            class="text-eco-emerald"
                        >
                            <path
                                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-2">Llámanos</h3>
                    <p class="text-eco-emerald font-medium">+51 999 999 999</p>
                </a>

                <!-- Email -->
                <a
                    href="mailto:info@ecofamil.com"
                    class="group p-8 rounded-3xl bg-white/5 border border-white/10 hover:border-eco-cyan/30 hover:bg-eco-cyan/5 transition-all text-center"
                >
                    <div
                        class="w-16 h-16 rounded-2xl bg-eco-cyan/10 flex items-center justify-center mx-auto mb-6 group-hover:bg-eco-cyan/20 transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="28"
                            height="28"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            class="text-eco-cyan"
                        >
                            <rect width="20" height="16" x="2" y="4" rx="2"
                            ></rect><path
                                d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-2">
                        Escríbenos
                    </h3>
                    <p class="text-eco-cyan font-medium">info@ecofamil.com</p>
                </a>

                <!-- Location -->
                <div
                    class="group p-8 rounded-3xl bg-white/5 border border-white/10 hover:border-white/20 transition-all text-center"
                >
                    <div
                        class="w-16 h-16 rounded-2xl bg-white/10 flex items-center justify-center mx-auto mb-6 group-hover:bg-white/15 transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="28"
                            height="28"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            class="text-white"
                        >
                            <path
                                d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"
                            ></path><circle cx="12" cy="10" r="3"></circle>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-2">Ubicación</h3>
                    <p class="text-white/60 font-medium">Cusco, Perú</p>
                </div>
            </div>

            <!-- CTA -->
            <div
                class="text-center reveal opacity-0 translate-y-4 transition-all duration-700 delay-400"
            >
                <a
                    href="/contacto"
                    class="inline-flex items-center gap-3 px-10 py-5 rounded-2xl bg-eco-emerald text-white font-bold text-lg hover:bg-emerald-400 transition-all shadow-lg shadow-eco-emerald/30 hover:shadow-eco-emerald/50"
                >
                    Solicitar Cotización
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2.5"
                    >
                        <path d="M5 12h14"></path><path d="m12 5 7 7-7 7"
                        ></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>
