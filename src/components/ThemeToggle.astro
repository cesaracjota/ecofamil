<button
    id="theme-toggle"
    class="group relative w-10 h-10 flex items-center justify-center rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors focus:outline-none"
    aria-label="Cambiar tema"
>
    <!-- Sun Icon -->
    <svg
        id="theme-toggle-light-icon"
        class="w-6 h-6 text-slate-500 hidden dark:block hover:text-yellow-400 transition-colors"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
    >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
        ></path>
    </svg>

    <!-- Moon Icon -->
    <svg
        id="theme-toggle-dark-icon"
        class="w-6 h-6 text-slate-500 block dark:hidden hover:text-indigo-400 transition-colors"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
    >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M20.354 24.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
        ></path>
    </svg>
</button>

<script>
    const themeToggleBtn = document.getElementById("theme-toggle");

    // Initial State Check for UI handled by Layout.astro script for speed
    // This script handles the toggle click

    themeToggleBtn?.addEventListener("click", function () {
        // Toggle LocalStorage
        const currentTheme = localStorage.getItem("theme");
        if (currentTheme === "dark") {
            localStorage.setItem("theme", "light");
            document.documentElement.classList.remove("dark");
        } else {
            // Default to dark if light (or null)
            localStorage.setItem("theme", "dark");
            document.documentElement.classList.add("dark");
        }
    });
</script>
