---
import { Image } from "astro:assets";
import nosotrosImg from "../../assets/nosotros.jpg";

// Import all images from nosotros directory
const nosotrosImages = import.meta.glob(
    "../../assets/nosotros/*.{jpeg,jpg,png,webp}",
    { eager: true },
);
const imageList = Object.values(nosotrosImages).map((mod: any) => mod.default);

// Quiénes Somos Section
const values = [
    {
        title: "Compromiso",
        icon: "heart",
        description: "Con nuestros clientes y el medio ambiente",
    },
    {
        title: "Integridad",
        icon: "shield",
        description: "Actuamos con transparencia y ética",
    },
    {
        title: "Calidad",
        icon: "award",
        description: "Excelencia en cada servicio",
    },
    {
        title: "Respeto",
        icon: "users",
        description: "Por las personas y la naturaleza",
    },
    {
        title: "Innovación",
        icon: "lightbulb",
        description: "Tecnología de vanguardia",
    },
    {
        title: "Trabajo en Equipo",
        icon: "handshake",
        description: "Colaboración y sinergia",
    },
];
---

<!-- HERO SECTION - With Background Image -->
<section
    class="relative min-h-[60vh] flex items-center justify-center overflow-hidden"
>
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
        <Image
            src={nosotrosImg}
            alt="Equipo Ecofamil"
            class="w-full h-full object-cover object-center"
            loading="eager"
        />
        <!-- Dark overlay for text contrast -->
        <div
            class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/60 to-black"
        >
        </div>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 container mx-auto px-6 text-center py-20">
        <h1
            class="text-5xl md:text-6xl font-bold mb-6 reveal opacity-0 translate-y-8 transition-all duration-700"
        >
            ¿Quiénes <span class="text-emerald-gradient">Somos</span>?
        </h1>
        <p
            class="text-xl md:text-2xl text-neutral-300 max-w-3xl mx-auto reveal opacity-0 translate-y-8 transition-all duration-700 delay-100"
        >
            Más de 10 años liderando la gestión ambiental en el sector minero e
            industrial
        </p>
    </div>
</section>

<!-- CONTENT SECTION - Black Background -->
<section id="nosotros" class="py-20 md:py-32 bg-black relative">
    <div class="container mx-auto px-6">
        <!-- Content Grid -->
        <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
            <!-- Left Column: Mission & Vision -->
            <div
                class="space-y-8 reveal opacity-0 translate-y-8 transition-all duration-700"
            >
                <!-- Experience Card -->
                <div
                    class="p-8 rounded-2xl bg-zinc-900 border-2 border-emerald-600/40 hover:border-emerald-600 hover:shadow-lg hover:shadow-emerald-600/20 transition-all"
                >
                    <div class="flex items-center gap-4 mb-4">
                        <div
                            class="w-12 h-12 rounded-lg bg-emerald-600/30 flex items-center justify-center"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                class="text-emerald-400"
                            >
                                <path d="M12 6v12"></path>
                                <path d="M17.196 9 6.804 15"></path>
                                <path d="m6.804 9 10.392 6"></path>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-emerald-400">
                            Experiencia
                        </h3>
                    </div>
                    <p class="text-slate-300">
                        Más de 10 años de experiencia brindando soluciones
                        integrales de gestión ambiental y limpieza industrial.
                    </p>
                </div>

                <!-- Mission -->
                <div
                    class="p-8 rounded-2xl bg-neutral-900 border border-neutral-700 hover:border-emerald-600/50 hover:bg-neutral-800/80 transition-all"
                >
                    <h3 class="text-2xl font-bold mb-4 flex items-center gap-3">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="28"
                            height="28"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            class="text-emerald-400"
                        >
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="m8 12 2 2 4-4"></path>
                        </svg>
                        Misión
                    </h3>
                    <p class="text-slate-300 leading-relaxed">
                        Brindar servicios de gestión integral de residuos con
                        confianza y respeto a las regulaciones ambientales,
                        garantizando la satisfacción de nuestros clientes.
                    </p>
                </div>

                <!-- Vision -->
                <div
                    class="p-8 rounded-2xl bg-neutral-900 border border-neutral-700 hover:border-emerald-600/50 hover:bg-neutral-800/80 transition-all"
                >
                    <h3 class="text-2xl font-bold mb-4 flex items-center gap-3">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="28"
                            height="28"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            class="text-emerald-400"
                        >
                            <path
                                d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"
                            ></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                        Visión
                    </h3>
                    <p class="text-slate-300 leading-relaxed">
                        Ser la mejor empresa de construcción ambiental, basada
                        en la ética, transparencia y compromiso con el
                        desarrollo sostenible.
                    </p>
                </div>
            </div>

            <!-- Right Column: Automatic Image Slider -->
            <div
                class="reveal opacity-0 translate-y-8 transition-all duration-700 delay-200"
            >
                <div
                    id="image-slider"
                    class="relative rounded-2xl overflow-hidden h-[600px] group"
                >
                    <!-- Images -->
                    {
                        imageList.map((img, index) => (
                            <div
                                class={`slider-image absolute inset-0 transition-opacity duration-1000 ${index === 0 ? "opacity-100" : "opacity-0"}`}
                                data-index={index}
                            >
                                <Image
                                    src={img}
                                    alt={`Ecofamil ${index + 1}`}
                                    class="w-full h-full object-cover"
                                    loading="lazy"
                                />
                            </div>
                        ))
                    }

                    <!-- Border overlay -->
                    <div
                        class="absolute inset-0 border-2 border-emerald-600/20 rounded-2xl group-hover:border-emerald-600/50 transition-all pointer-events-none z-10"
                    >
                    </div>

                    <!-- Slide indicators -->
                    {
                        imageList.length > 1 && (
                            <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2 z-20">
                                {imageList.map((_, index) => (
                                    <button
                                        class={`slider-dot w-2 h-2 rounded-full transition-all ${index === 0 ? "bg-emerald-400 w-8" : "bg-white/50"}`}
                                        data-index={index}
                                        aria-label={`Go to slide ${index + 1}`}
                                    />
                                ))}
                            </div>
                        )
                    }
                </div>
            </div>
        </div>

        <!-- Values Section -->
        <div
            class="reveal opacity-0 translate-y-8 transition-all duration-700 delay-300"
        >
            <h3 class="text-3xl font-bold text-center mb-12">
                Nuestros <span class="text-emerald-gradient">Valores</span>
            </h3>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    values.map((value) => (
                        <div class="p-6 rounded-xl bg-neutral-900 border border-neutral-700 hover:border-emerald-600/50 hover:bg-neutral-800/80 transition-all group">
                            <div class="w-12 h-12 rounded-lg bg-emerald-600/15 flex items-center justify-center mb-4 group-hover:bg-emerald-600/25 transition-all">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    class="text-emerald-400"
                                >
                                    <circle cx="12" cy="12" r="10" />
                                </svg>
                            </div>
                            <h4 class="text-lg font-bold mb-2">
                                {value.title}
                            </h4>
                            <p class="text-slate-400 text-sm">
                                {value.description}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<script>
    // Automatic Image Slider
    document.addEventListener("DOMContentLoaded", () => {
        const sliderImages = document.querySelectorAll(".slider-image");
        const sliderDots = document.querySelectorAll(".slider-dot");
        let currentIndex = 0;
        const totalImages = sliderImages.length;

        // Only run if there's more than one image
        if (totalImages <= 1) return;

        function showSlide(index: number) {
            // Hide all images
            sliderImages.forEach((img) => {
                img.classList.remove("opacity-100");
                img.classList.add("opacity-0");
            });

            // Show current image
            sliderImages[index].classList.remove("opacity-0");
            sliderImages[index].classList.add("opacity-100");

            // Update dots
            sliderDots.forEach((dot, i) => {
                if (i === index) {
                    dot.classList.remove("bg-white/50", "w-2");
                    dot.classList.add("bg-emerald-400", "w-8");
                } else {
                    dot.classList.remove("bg-emerald-400", "w-8");
                    dot.classList.add("bg-white/50", "w-2");
                }
            });
        }

        function nextSlide() {
            currentIndex = (currentIndex + 1) % totalImages;
            showSlide(currentIndex);
        }

        // Auto-advance every 4 seconds
        setInterval(nextSlide, 4000);

        // Dot click handlers
        sliderDots.forEach((dot, index) => {
            dot.addEventListener("click", () => {
                currentIndex = index;
                showSlide(currentIndex);
            });
        });
    });
</script>
