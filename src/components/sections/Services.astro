---
// Services Section
const services = [
    {
        title: 'Manejo Integral de Residuos',
        description: 'Recolección, segregación y gestión completa de residuos sólidos',
        icon: 'trash',
        color: 'emerald'
    },
    {
        title: 'Transporte y Disposición Final',
        description: 'Cumplimiento normativo en el transporte seguro de residuos',
        icon: 'truck',
        color: 'cyan'
    },
    {
        title: 'Limpieza de Pozos Sépticos',
        description: 'Mantenimiento y limpieza de pozos sépticos y trampas de grasa',
        icon: 'droplet',
        color: 'emerald'
    },
    {
        title: 'Manejo de Aguas Residuales',
        description: 'Servicio Hidrojet y bombas de vacío de alta presión',
        icon: 'waves',
        color: 'cyan'
    },
    {
        title: 'Abastecimiento de Agua',
        description: 'Agua potable y no potable para operaciones industriales',
        icon: 'beaker',
        color: 'emerald'
    },
    {
        title: 'Gestión de Rellenos Sanitarios',
        description: 'Operación y mantenimiento de rellenos sanitarios certificados',
        icon: 'layers',
        color: 'cyan'
    },
    {
        title: 'Limpieza Industrial',
        description: 'Limpieza especializada de plantas y espacios industriales',
        icon: 'sparkles',
        color: 'emerald'
    },
    {
        title: 'Baños Portátiles',
        description: 'Integra, Vantage, duchas y cabinas sanitarias completas',
        icon: 'home',
        color: 'cyan'
    },
];
---

<section id="servicios" class="py-20 md:py-32 bg-black relative">
    <div class="container mx-auto px-6">
        <!-- Section Header -->
        <div class="text-center max-w-3xl mx-auto mb-16 reveal opacity-0 translate-y-8 transition-all duration-700">
            <h2 class="text-4xl md:text-5xl font-bold mb-4">
                Nuestros <span class="text-emerald-gradient">Servicios</span>
            </h2>
            <p class="text-xl text-neutral-400">
                Soluciones integrales de gestión ambiental para minería e industria
            </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            {services.map((service, index) => (
                <div class="group relative p-6 rounded-2xl bg-neutral-900 border border-neutral-700 hover:border-emerald-600 hover:bg-neutral-800/80 transition-all duration-300 card-hover glow-emerald-hover reveal opacity-0 translate-y-8"
                    style={`transition-delay: ${index * 50}ms`}
                >
                    <!-- Icon -->
                    <div class="w-14 h-14 rounded-xl bg-emerald-600/15 flex items-center justify-center mb-4 group-hover:bg-emerald-600/25 group-hover:scale-110 transition-all duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-emerald-400">
                            {service.icon === 'trash' && (
                                <>
                                    <path d="M3 6h18"/>
                                    <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
                                    <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
                                </>
                            )}
                            {service.icon === 'truck' && (
                                <>
                                    <path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"/>
                                    <path d="M15 18H9"/>
                                    <path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"/>
                                    <circle cx="17" cy="18" r="2"/>
                                    <circle cx="7" cy="18" r="2"/>
                                </>
                            )}
                            {service.icon === 'droplet' && (
                                <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
                            )}
                            {service.icon === 'waves' && (
                                <>
                                    <path d="M2 6c.6.5 1.2 1 2.5 1C7 7 7 5 9.5 5c2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"/>
                                    <path d="M2 12c.6.5 1.2 1 2.5 1 2.5 0 2.5-2 5-2 2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"/>
                                    <path d="M2 18c.6.5 1.2 1 2.5 1 2.5 0 2.5-2 5-2 2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"/>
                                </>
                            )}
                            {service.icon === 'beaker' && (
                                <>
                                    <path d="M4.5 3h15"/>
                                    <path d="M6 3v16a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V3"/>
                                    <path d="M6 14h12"/>
                                </>
                            )}
                            {service.icon === 'layers' && (
                                <>
                                    <path d="m12.83 2.18a2 2 0 0 0-1.66 0L2.6 6.08a1 1 0 0 0 0 1.83l8.58 3.91a2 2 0 0 0 1.66 0l8.58-3.9a1 1 0 0 0 0-1.83Z"/>
                                    <path d="m22 17.65-9.17 4.16a2 2 0 0 1-1.66 0L2 17.65"/>
                                    <path d="m22 12.65-9.17 4.16a2 2 0 0 1-1.66 0L2 12.65"/>
                                </>
                            )}
                            {service.icon === 'sparkles' && (
                                <>
                                    <path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/>
                                    <path d="M5 3v4"/>
                                    <path d="M19 17v4"/>
                                    <path d="M3 5h4"/>
                                    <path d="M17 19h4"/>
                                </>
                            )}
                            {service.icon === 'home' && (
                                <>
                                    <path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8"/>
                                    <path d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                                </>
                            )}
                        </svg>
                    </div>

                    <!-- Content -->
                    <h3 class="text-xl font-bold mb-2 group-hover:text-emerald-400 transition-colors">
                        {service.title}
                    </h3>
                    <p class="text-neutral-400 text-sm leading-relaxed">
                        {service.description}
                    </p>

                    <!-- Hover Arrow -->
                    <div class="mt-4 flex items-center text-emerald-400 opacity-0 group-hover:opacity-100 transition-opacity">
                        <span class="text-sm font-medium">Más información</span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="ml-1 group-hover:translate-x-1 transition-transform">
                            <path d="M5 12h14"/>
                            <path d="m12 5 7 7-7 7"/>
                        </svg>
                    </div>
                </div>
            ))}
        </div>

        <!-- CTA -->
        <div class="text-center mt-12 reveal opacity-0 translate-y-8 transition-all duration-700">
            <a 
                href="/servicios" 
                class="inline-flex items-center gap-2 px-8 py-4 rounded-xl bg-neutral-900 border-2 border-emerald-600/40 text-emerald-400 font-semibold hover:bg-emerald-600/10 hover:border-emerald-600 transition-all"
            >
                Ver Todos los Servicios
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14"/>
                    <path d="m12 5 7 7-7 7"/>
                </svg>
            </a>
        </div>
    </div>
</section>
