---
import Layout from "./Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import FloatingButtons from "../components/FloatingButtons.astro";

interface Props {
    title: string;
    description: string;
    pubDate: Date;
    author: string;
    image?: string;
    tags?: string[];
}

const { title, description, pubDate, author, image, tags = [] } = Astro.props;
const formattedDate = pubDate.toLocaleDateString("es-PE", {
    year: "numeric",
    month: "long",
    day: "numeric",
});
---

<Layout title={`${title} | Blog Ecofamil`}>
    <Navbar />
    <article class="bg-black min-h-screen">
        <!-- Header -->
        <header
            class="relative bg-gradient-to-b from-neutral-900 to-black py-20 md:py-32"
        >
            <div class="container mx-auto px-6">
                <div class="max-w-4xl mx-auto">
                    <!-- Tags -->
                    {
                        tags.length > 0 && (
                            <div class="flex flex-wrap gap-2 mb-6">
                                {tags.map((tag) => (
                                    <span class="px-3 py-1 rounded-full text-xs font-medium bg-emerald-600/10 text-emerald-400 border border-emerald-600/20">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                        )
                    }

                    <!-- Title -->
                    <h1
                        class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6"
                    >
                        {title}
                    </h1>

                    <!-- Description -->
                    <p class="text-xl text-neutral-400 mb-8 leading-relaxed">
                        {description}
                    </p>

                    <!-- Meta -->
                    <div class="flex items-center gap-4 text-neutral-500">
                        <span class="font-medium">{author}</span>
                        <span>â€¢</span>
                        <time datetime={pubDate.toISOString()}
                            >{formattedDate}</time
                        >
                    </div>
                </div>
            </div>
        </header>

        <!-- Featured Image -->
        {
            image && (
                <div class="container mx-auto px-6 -mt-12 mb-16">
                    <div class="max-w-5xl mx-auto rounded-2xl overflow-hidden border border-neutral-800">
                        <img
                            src={image}
                            alt={title}
                            class="w-full h-[400px] md:h-[500px] object-cover"
                            loading="eager"
                        />
                    </div>
                </div>
            )
        }

        <!-- Content -->
        <div class="container mx-auto px-6 py-12">
            <div class="max-w-3xl mx-auto">
                <div class="markdown-content">
                    <slot />
                </div>
            </div>
        </div>

        <!-- Back Button -->
        <div class="container mx-auto px-6 pb-20 text-center">
            <a
                href="/blog"
                class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-neutral-900 border border-neutral-800 hover:border-emerald-600/50 text-neutral-300 hover:text-white transition-all"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <path d="m12 19-7-7 7-7"></path>
                    <path d="M19 12H5"></path>
                </svg>
                Volver al Blog
            </a>
        </div>
    </article>
    <Footer />
    <FloatingButtons />
</Layout>

<style is:global>
    /* Markdown Content Styles */
    .markdown-content {
        color: #d4d4d4; /* neutral-300 */
        font-size: 1.125rem; /* text-lg */
        line-height: 1.75;
    }

    /* Headings */
    .markdown-content h1,
    .markdown-content h2,
    .markdown-content h3,
    .markdown-content h4 {
        color: #ffffff;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    .markdown-content h1 {
        font-size: 2.25rem;
        margin-top: 0;
    }

    .markdown-content h2 {
        font-size: 1.875rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #404040;
    }

    .markdown-content h3 {
        font-size: 1.5rem;
    }

    .markdown-content h4 {
        font-size: 1.25rem;
    }

    /* Paragraphs */
    .markdown-content p {
        margin-bottom: 1.5rem;
    }

    /* Links */
    .markdown-content a {
        color: #34d399; /* emerald-400 */
        text-decoration: underline;
        text-decoration-color: #34d39940;
        transition: all 0.2s;
    }

    .markdown-content a:hover {
        color: #6ee7b7; /* emerald-300 */
        text-decoration-color: #34d399;
    }

    /* Lists */
    .markdown-content ul,
    .markdown-content ol {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    .markdown-content ul {
        list-style-type: disc;
    }

    .markdown-content ol {
        list-style-type: decimal;
    }

    .markdown-content li {
        margin-bottom: 0.5rem;
        padding-left: 0.5rem;
    }

    .markdown-content li::marker {
        color: #059669; /* emerald-600 */
    }

    /* Blockquotes */
    .markdown-content blockquote {
        border-left: 4px solid #059669;
        padding-left: 1.5rem;
        margin: 1.5rem 0;
        background: #0a0a0a;
        padding: 1rem 1.5rem;
        border-radius: 0.5rem;
        font-style: italic;
        color: #a3a3a3; /* neutral-400 */
    }

    /* Code */
    .markdown-content code {
        background: #1a1a1a;
        border: 1px solid #404040;
        padding: 0.2rem 0.4rem;
        border-radius: 0.25rem;
        font-family: "Courier New", monospace;
        font-size: 0.9em;
        color: #34d399;
    }

    .markdown-content pre {
        background: #0a0a0a;
        border: 1px solid #404040;
        padding: 1.5rem;
        border-radius: 0.75rem;
        overflow-x: auto;
        margin: 1.5rem 0;
    }

    .markdown-content pre code {
        background: transparent;
        border: none;
        padding: 0;
        color: #d4d4d4;
    }

    /* Images */
    .markdown-content img {
        max-width: 100%;
        height: auto;
        border-radius: 0.75rem;
        border: 1px solid #404040;
        margin: 2rem 0;
    }

    /* Tables */
    .markdown-content table {
        width: 100%;
        border-collapse: collapse;
        margin: 1.5rem 0;
    }

    .markdown-content th {
        background: #1a1a1a;
        color: #ffffff;
        font-weight: 600;
        text-align: left;
        padding: 0.75rem;
        border: 1px solid #404040;
    }

    .markdown-content td {
        padding: 0.75rem;
        border: 1px solid #404040;
    }

    .markdown-content tr:nth-child(even) {
        background: #0a0a0a;
    }

    /* Horizontal Rule */
    .markdown-content hr {
        border: none;
        border-top: 1px solid #404040;
        margin: 2rem 0;
    }

    /* Strong/Bold */
    .markdown-content strong,
    .markdown-content b {
        color: #ffffff;
        font-weight: 700;
    }

    /* Emphasis/Italic */
    .markdown-content em,
    .markdown-content i {
        color: #a3a3a3;
    }
</style>
