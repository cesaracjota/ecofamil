---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Contacto | Ecofamil S.A.C.">
    <Navbar />
    <main class="pt-32 pb-32 md:pb-20">
        <Contact />

        <!-- Contact Form -->
        <section class="py-20">
            <div class="container mx-auto px-6">
                <div class="max-w-2xl mx-auto">
                    <div
                        class="p-8 md:p-12 rounded-3xl bg-white/5 border border-white/10"
                    >
                        <h3
                            class="text-2xl font-bold text-white mb-6 text-center"
                        >
                            Envíanos un mensaje
                        </h3>

                        <form class="space-y-6">
                            <div class="grid md:grid-cols-2 gap-6">
                                <div>
                                    <label
                                        class="block text-sm font-medium text-white/70 mb-2"
                                        >Nombre</label
                                    >
                                    <input
                                        type="text"
                                        class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder-white/30 focus:border-eco-emerald focus:outline-none transition-colors"
                                        placeholder="Tu nombre"
                                    />
                                </div>
                                <div>
                                    <label
                                        class="block text-sm font-medium text-white/70 mb-2"
                                        >Email</label
                                    >
                                    <input
                                        type="email"
                                        class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder-white/30 focus:border-eco-emerald focus:outline-none transition-colors"
                                        placeholder="tu@email.com"
                                    />
                                </div>
                            </div>

                            <div>
                                <label
                                    class="block text-sm font-medium text-white/70 mb-2"
                                    >Empresa</label
                                >
                                <input
                                    type="text"
                                    class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder-white/30 focus:border-eco-emerald focus:outline-none transition-colors"
                                    placeholder="Nombre de tu empresa"
                                />
                            </div>

                            <div>
                                <label
                                    class="block text-sm font-medium text-white/70 mb-2"
                                    >Mensaje</label
                                >
                                <textarea
                                    rows="4"
                                    class="w-full px-4 py-3 rounded-xl bg-white/5 border border-white/10 text-white placeholder-white/30 focus:border-eco-emerald focus:outline-none transition-colors resize-none"
                                    placeholder="¿En qué podemos ayudarte?"
                                ></textarea>
                            </div>

                            <button
                                type="submit"
                                class="w-full px-8 py-4 rounded-xl bg-eco-emerald text-white font-bold hover:bg-emerald-400 transition-all"
                            >
                                Enviar mensaje
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <Footer />
</Layout>
