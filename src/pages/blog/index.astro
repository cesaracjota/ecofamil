---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import FloatingButtons from "../../components/FloatingButtons.astro";

const posts = (await getCollection("blog"))
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout
    title="Blog | Ecofamil S.A.C. - Insights sobre Gestión Ambiental"
    description="Artículos y guías sobre gestión de residuos, normativas ambientales, economía circular y mejores prácticas para la industria minera en Perú."
>
    <Navbar />
    <main class="bg-black">
        <!-- Hero Section -->
        <section
            class="relative min-h-[40vh] flex items-center justify-center bg-gradient-to-b from-neutral-900 to-black py-20"
        >
            <div class="container mx-auto px-6 text-center">
                <span
                    class="inline-block px-4 py-2 rounded-full bg-emerald-600/10 border border-emerald-600/30 text-emerald-400 text-sm font-medium mb-6"
                >
                    Nuestro Blog
                </span>
                <h1 class="text-4xl md:text-6xl font-bold mb-6">
                    Insights & <span class="text-emerald-gradient"
                        >Novedades</span
                    >
                </h1>
                <p
                    class="text-neutral-400 text-lg md:text-xl max-w-2xl mx-auto"
                >
                    Artículos sobre gestión ambiental, normativas y buenas
                    prácticas para la industria.
                </p>
            </div>
        </section>

        <!-- Featured Post -->
        {
            posts.length > 0 && (
                <section class="py-12 bg-black border-b border-neutral-800">
                    <div class="container mx-auto px-6">
                        <a
                            href={`/blog/${posts[0].slug}`}
                            class="group block reveal opacity-0 translate-y-8 transition-all duration-700"
                        >
                            <div class="relative rounded-2xl overflow-hidden bg-neutral-900 border border-neutral-800 hover:border-emerald-600/50 transition-all">
                                <div class="grid md:grid-cols-5 gap-0">
                                    {posts[0].data.image && (
                                        <div class="md:col-span-2 aspect-video md:aspect-auto md:h-full overflow-hidden">
                                            <img
                                                src={posts[0].data.image}
                                                alt={posts[0].data.title}
                                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                                                loading="eager"
                                            />
                                        </div>
                                    )}
                                    <div class="md:col-span-3 p-8 md:p-12 flex flex-col justify-center">
                                        <span class="inline-block w-fit px-3 py-1 rounded-full text-xs font-bold bg-emerald-600 text-white mb-4">
                                            Destacado
                                        </span>
                                        <h2 class="text-3xl md:text-4xl font-bold mb-4 group-hover:text-emerald-400 transition-colors">
                                            {posts[0].data.title}
                                        </h2>
                                        <p class="text-neutral-400 mb-6 line-clamp-3 leading-relaxed">
                                            {posts[0].data.description}
                                        </p>
                                        <div class="flex items-center gap-4 text-sm text-neutral-500">
                                            <span class="font-medium">
                                                {posts[0].data.author}
                                            </span>
                                            <span>•</span>
                                            <span>
                                                {posts[0].data.pubDate.toLocaleDateString(
                                                    "es-PE",
                                                    {
                                                        year: "numeric",
                                                        month: "long",
                                                        day: "numeric",
                                                    },
                                                )}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </section>
            )
        }

        <!-- All Posts Grid -->
        <section class="py-20 md:py-32 bg-black">
            <div class="container mx-auto px-6">
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {
                        posts.slice(1).map((post, index) => (
                            <article
                                class="group reveal opacity-0 translate-y-8 transition-all duration-700"
                                style={`transition-delay: ${index * 100}ms`}
                            >
                                <a
                                    href={`/blog/${post.slug}`}
                                    class="block h-full"
                                >
                                    <div class="h-full rounded-2xl overflow-hidden bg-neutral-900 border border-neutral-800 hover:border-emerald-600/50 transition-all">
                                        {post.data.image && (
                                            <div class="aspect-[16/9] overflow-hidden">
                                                <img
                                                    src={post.data.image}
                                                    alt={post.data.title}
                                                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                                                    loading="lazy"
                                                />
                                            </div>
                                        )}
                                        <div class="p-6">
                                            <div class="flex flex-wrap gap-2 mb-4">
                                                {post.data.tags
                                                    .slice(0, 2)
                                                    .map((tag) => (
                                                        <span class="px-3 py-1 rounded-full text-xs font-medium bg-emerald-600/10 text-emerald-400 border border-emerald-600/20">
                                                            {tag}
                                                        </span>
                                                    ))}
                                            </div>
                                            <h3 class="text-xl font-bold mb-3 line-clamp-2 group-hover:text-emerald-400 transition-colors">
                                                {post.data.title}
                                            </h3>
                                            <p class="text-neutral-400 text-sm line-clamp-2 mb-4 leading-relaxed">
                                                {post.data.description}
                                            </p>
                                            <div class="flex items-center justify-between text-xs text-neutral-500 pt-4 border-t border-neutral-800">
                                                <span class="font-medium">
                                                    {post.data.author}
                                                </span>
                                                <span>
                                                    {post.data.pubDate.toLocaleDateString(
                                                        "es-PE",
                                                        {
                                                            month: "short",
                                                            day: "numeric",
                                                        },
                                                    )}
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </article>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>
    <Footer />
    <FloatingButtons />
</Layout>

<style>
    .text-emerald-gradient {
        background: linear-gradient(135deg, #34d399 0%, #059669 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .reveal {
        animation: reveal 0.6s ease-out forwards;
    }

    @keyframes reveal {
        from {
            opacity: 0;
            transform: translateY(2rem);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script>
    const observer = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("revealed");
                }
            });
        },
        {
            threshold: 0.1,
        },
    );

    document.querySelectorAll(".reveal").forEach((el) => observer.observe(el));
</script>
